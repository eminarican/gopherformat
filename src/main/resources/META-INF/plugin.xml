<idea-plugin>
    <id>com.eminarican.GopherFormat</id>

    <name>GopherFormat</name>

    <vendor email="emin.arican@outlook.com">Emin ArÄ±can</vendor>

    <description>color tags highlighter plugin for gophertunnel</description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.plugins.go</depends>

    <extensions defaultExtensionNs="com.intellij">
        <annotator language="go" implementationClass="com.eminarican.gopherformat.FormatAnnotator"/>
        <lang.foldingBuilder language="go" implementationClass="com.eminarican.gopherformat.FormatFoldingBuilder"/>

        <annotator language="yaml" implementationClass="com.eminarican.gopherformat.FormatAnnotator"/>
        <lang.foldingBuilder language="yaml" implementationClass="com.eminarican.gopherformat.FormatFoldingBuilder"/>

        <annotator language="JSON" implementationClass="com.eminarican.gopherformat.FormatAnnotator"/>
        <lang.foldingBuilder language="JSON" implementationClass="com.eminarican.gopherformat.FormatFoldingBuilder"/>

        <annotator language="TOML" implementationClass="com.eminarican.gopherformat.FormatAnnotator"/>
        <lang.foldingBuilder language="TOML" implementationClass="com.eminarican.gopherformat.FormatFoldingBuilder"/>
    </extensions>
</idea-plugin>
